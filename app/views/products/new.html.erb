<%= render "layouts/header" %>
<div class="container mt-5">
  <%= form_for(@product) do |f| %>
    <div class="row">
      <div class="col-6">
        <%= f.label "名前" %>
        <%= f.text_field :name, class: "form-control" %><br/>

        <div class="form-row">
          <div class="form-group col-sm-6">
            <%= f.label "タンパク質[g]" %>
            <%= f.text_field :protein, class: "form-control" %><br/>
          </div>
          <div class="form-group col-sm-6">
            <%= f.label "脂質[g]" %>
            <%= f.text_field :fat, class: "form-control" %><br/>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-sm-6">
            <%= f.label "炭水化物[g]" %>
            <%= f.text_field :carbo, class: "form-control" %><br/>
          </div>
          <div class="form-group col-sm-6">
            <%= f.label "糖質[g]" %>
            <%= f.text_field :sugar, class: "form-control" %><br/>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-sm-6">
            <%= f.label "カロリー[kcal]" %>
            <%= f.text_field :calory, class: "form-control" %><br/>
          </div>
          <div class="form-group col-sm-6">
            <%= f.label "価格[円]" %>
            <%= f.text_field :price, class: "form-control" %><br/>
          </div>
        </div>

          <%= f.label "購入リンク" %><br/>
          <%= f.text_field :purchase_url, class: "form-control"  %><br/>
      </div>

      <%= f.label "タグ付け" %>
      <%= f.text_area :tag_list, value: @product.tag_list.join(','), class: "form-control", placeholder: "カンマ「,」で区切ってください。"%><br/>

      <div class="col-6">
        <%= f.label :image %>
        <%= f.file_field :image %>
        <%= f.submit "投稿する", class: "btn btn-primary my-3" %><br/>
        <%= link_to "キャンセル", root_path %>
      </div>
    </div>
  <% end %>
</div>
<%= render "layouts/footer" %>