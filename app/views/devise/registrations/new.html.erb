<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 py-5 signup_image">
      <ul class="signup-logo">
        <li class="signup-logo__char">Protein</li>
        <li class="signup-logo__char">Fat</li>
        <li class="signup-logo__char">Carbohydrate</li>
      </ul>
    </div>

    <div class="col-md-8 col-lg-6">
      <div class="signup d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
              <h2>ユーザー登録</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: "form-control" %>
                <%= f.label :email %>
              </div>

              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <small>(<%= @minimum_password_length %>桁以上で入力してください。)</small>
                <% end %><br />
              </div>

              <div class="form-label-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password_comfirmation", class: "form-control" %>
                <%= f.label :password_confirmation %>
              </div>

              <div class="form-label-group">
                <%= f.text_field :nickname, placeholder: "nickname", class: "form-control" %>
                <%= f.label :nickname %>
              </div>

              <div class="form-group">
                <small for="inputFile">アバター画像の登録</small>
                <div class="input-group">
                  <div class="custom-file">
                    <%= f.file_field :avatar, class:"custom-file-input", id:"inputFile" %>
                    <label class="custom-file-label" for="inputFile" data-browse="参照">ファイルを選択...</label>
                  </div>
                  <div class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary input-group-text" id="inputFileReset">取消</button>
                  </div>
                </div>
              </div>

              <%= recaptcha_tags %>


              <%= f.submit "登録する", class: 'btn btn-primary btn-signup btn-block my-3'%>

              <% end %>

              <%= render "devise/shared/links" %>
              <%= link_to '戻る', root_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>