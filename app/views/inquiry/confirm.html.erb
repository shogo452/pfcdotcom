<div class="container-fluid">
  <div class="row no-gutter align-items-center">
    <div class="col-md-8 col-lg-6 align-items-center">
      <%= form_for @inquiry, url: inquiry_thanks_path, html: {class:"px-5"} do |f| %>
      <h2>
        お問い合わせ
      </h2>
      <table class="table">
        <tr>
          <th scope="row">名前</th>
          <td>
            <%= f.hidden_field :name %>
            <%= @inquiry.name %>
          </td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td>
            <%= f.hidden_field :email %>
            <%= @inquiry.email %>
          </td>
        </tr>
        <tr>
          <th scope="row">お問い合わせ内容</th>
          <td>
            <%= f.hidden_field :message %>
            <%= @inquiry.message %>
          </td>
        </tr>
      </table>
      <%= f.submit "送信", class: "btn btn-primary my-3" %><br />
      <%= link_to "戻る", root_path %>
      <% end %>
    </div>
    <div class="d-none d-md-flex col-md-4 col-lg-6">
      <article class="signup_image">
        <div class="login_right">
        </div>
      </article>
    </div>
  </div>
</div>