<div class="container-fluid">
  <div class="row no-gutter">
    <div class="col-md-8 col-lg-6">
      <div class="signup d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
              <h2>ログイン</h2>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: 'form-control' %>
                <%= f.label :email %>
              </div>

              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'form-control' %>
                <%= f.label :password %>
              </div>

              <% if devise_mapping.rememberable? %>
              <div class="form-label-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end %>

              <div class="actions">
                <%= f.submit "ログイン" , class: 'btn btn-orange btn-login btn-block my-2'%>
              </div>
              <% end %>


              <%= render "devise/shared/links" %>
              <%= link_to '戻る', root_path %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="d-none d-md-flex col-md-4 col-lg-6 edit_image"></div>
