<div class="container-fluid">
  <div class="row no-gutter align-items-center">
    <div class="col-md-8 col-lg-6 align-items-center">
      <%= form_for @inquiry, url: inquiry_confirm_path, html: {class:"px-5"} do |f| %>
      <h2>
        お問い合わせ
      </h2>
      <% if @inquiry.errors.any? %>
      <div>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.label "名前" %><span class="text-danger">(必須)</span>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください。ニックネームも可" %>
      </div>
      <div class="form-group">
        <%= f.label "メールアドレス" %><span class="text-danger">(必須)</span>
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレスを入力してください。" %>
      </div>
      <div class="form-group">
        <%= f.label "お問い合わせ内容" %></span>
        <%= f.text_area :message, class: "form-control", placeholder: "お問い合わせ内容を入力してください。" %>
      </div>
      <%= f.submit "確認", class: "btn btn-primary my-3" %><br />
      <%= link_to "キャンセル", root_path %>
      <% end %>
    </div>
    <div class="d-none d-md-flex col-md-4 col-lg-6">
      <article class="login_image">
        <div class="login_right">
          <div class="login_logo">
            <%= image_tag "logo_transparent.png", size: "300x300" %>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>